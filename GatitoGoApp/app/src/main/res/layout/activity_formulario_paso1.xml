<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTituloFormulario1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="Completa tu solicitud de adopción"
        android:textColor="#5D4037"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editCedula"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Cédula de identidad"
        android:backgroundTint="#FFCC80"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Nombre completo"
        android:backgroundTint="#FFCC80"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email"
        android:backgroundTint="#FFCC80"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editDireccion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Dirección"
        android:backgroundTint="#FFCC80"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonSiguientePaso1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:backgroundTint="#FF6F00"
        android:textColor="#FFFFFF" />
</LinearLayout>
