<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageInicio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/imagen_inicio"
        android:contentDescription="Imagen de inicio" />

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GatitoGo"
        android:textColor="#5D4037"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ãšnete y salva un amigo gatuno"
        android:textColor="#5D4037"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonComenzar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Comenzar"
        android:backgroundTint="#FF6F00"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnVerSolicitudes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Solicitudes"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
