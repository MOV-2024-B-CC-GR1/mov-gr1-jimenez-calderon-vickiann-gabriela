<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageGatito"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="Foto del gatito" />

    <TextView
        android:id="@+id/textNombreGatito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Gatito"
        android:textSize="24sp"
        android:textColor="#5D4037"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textDetallesGatito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalles del Gatito"
        android:textSize="16sp"
        android:textColor="#5D4037"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonAdoptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adoptar"
        android:backgroundTint="#FF6F00"
        android:textColor="#FFFFFF"
        android:layout_marginTop="24dp" />
</LinearLayout>
