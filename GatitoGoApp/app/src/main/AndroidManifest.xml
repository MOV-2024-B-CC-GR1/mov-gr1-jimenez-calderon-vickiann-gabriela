<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gatitogoapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GatitoGoApp"
        tools:targetApi="31">

        <!-- Actividad principal (pantalla de inicio) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GatitoGoApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades de la aplicaciÃ³n -->
        <activity android:name=".VerGatitosActivity" android:exported="true" />
        <activity android:name=".ui.SolicitarActivity" android:exported="true" />
        <activity android:name=".ConfirmacionActivity" android:exported="true" />
        <activity android:name=".FormularioPaso1Activity" android:exported="true" />
        <activity android:name=".FormularioPaso2Activity" android:exported="true" />
        <activity android:name=".ListaSolicitudesActivity" android:exported="true" />

    </application>

</manifest>
