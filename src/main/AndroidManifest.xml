<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieActorApp"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MovieActorApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declarar otras actividades -->
        <activity android:name=".ViewMoviesActivity" />
        <activity android:name=".CreateMovieActivity" />
        <activity android:name=".MovieDetailsActivity" />
        <activity android:name=".ViewActorsActivity" />
        <activity android:name=".AddActorActivity" />
        <activity android:name=".UpdateMovieActivity" />
        <activity android:name=".UpdateActorActivity" />
        <activity android:name=".SelectActorsActivity" />
    </application>
</manifest>
