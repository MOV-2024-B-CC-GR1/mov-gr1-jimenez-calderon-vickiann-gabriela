<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/movieTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título de la película"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/movieDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/movieReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de lanzamiento"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/movieGenreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Género de la película"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/movieReleaseDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de lanzamiento"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/movieActors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actores: "
        android:textSize="14sp"
        android:layout_marginTop="4dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/editMovieButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDITAR"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/deleteMovieButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIMINAR"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
